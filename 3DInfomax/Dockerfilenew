FROM nvidia/cuda:11.8.0-devel-ubuntu22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    wget \
    git \
    curl \
    ca-certificates \
    libglib2.0-0 \
    libgl1-mesa-glx \
    && rm -rf /var/lib/apt/lists/*

# Install Miniconda
RUN wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -O /miniconda.sh && \
    bash /miniconda.sh -b -p /opt/conda && \
    rm /miniconda.sh

ENV PATH="/opt/conda/bin:$PATH"

# Create conda environment
COPY environmentnew.yml /tmp/environmentnew.yml
RUN conda env create -f /tmp/environmentnew.yml && rm /tmp/environmentnew.yml

# Install additional dependencies with pip (outside conda env creation)
RUN conda run -n 3DInfomax pip install dgl -f https://data.dgl.ai/wheels/cu118/repo.html && \
    conda run -n 3DInfomax pip install torch-scatter torch-sparse -f https://data.pyg.org/whl/torch-2.4.0+cu118.html && \
    conda run -n 3DInfomax pip install torchdata

# Set default shell to bash and activate the environment
SHELL ["/bin/bash", "-c"]
RUN echo "source activate 3DInfomax" > ~/.bashrc
ENV CONDA_DEFAULT_ENV=3DInfomax
ENV PATH="/opt/conda/envs/3DInfomax/bin:$PATH"

# Set working directory
WORKDIR /workspace

CMD ["/bin/bash"]
